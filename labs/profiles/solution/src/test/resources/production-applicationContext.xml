<?xml version="1.0" encoding="UTF-8"?>
<beans 
  xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

  <context:annotation-config />

  <bean id="auctionRepository" class="no.arktekk.training.spring.repository.impl.KeyedAuctionRepository">
    <property name="initialCapacity" value="10000"/>
  </bean>

  <bean id="auctionService" class="no.arktekk.training.spring.service.impl.DefaultAuctionService">
    <constructor-arg ref="auctionRepository" />
  </bean>

</beans>